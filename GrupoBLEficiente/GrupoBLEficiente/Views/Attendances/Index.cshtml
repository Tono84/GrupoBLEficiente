@model IEnumerable<GrupoBLEficiente.Models.Attendance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Asistencia</h1>

<p>
    <a asp-action="Create">Agregar Asistencia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Absences)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayPeriodStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayPeriodEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.commissions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnCallHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Absences)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayPeriodStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayPeriodEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.commissions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnCallHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employees.Name)
            </td>
            <td>
                <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.IdAttendance" class="btn btn-success">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdAttendance" class="btn btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdAttendance" class="btn btn-danger">Borrar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
