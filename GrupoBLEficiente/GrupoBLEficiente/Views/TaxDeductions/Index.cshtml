@model IEnumerable<GrupoBLEficiente.Models.TaxDeduction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Impuestos</h1>

<p>
    <a asp-action="Create">Crear Deducción por Impuestos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTaxDeduction">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTaxDeduction">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTaxDeduction">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
